# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex_for_production
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=5000000
ALLOWED_FILE_TYPES=jpeg,jpg,png

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# Production URL (will be set automatically by Netlify)
# NETLIFY_URL=https://your-site-name.netlify.app
